<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.05"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="1.3"
            android:scaleY="1.2"
            android:src="@drawable/yt_icon"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Premium"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:scaleX="0.9"
            android:scaleY="1.2"
            android:gravity="start"
            android:layout_gravity="center_vertical"
            android:layout_weight="10"/>
        <ImageView
            android:id="@+id/iv_yt_send_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/yt_send_icon"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/iv_yt_alarm_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/yt_alarm_icon"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/iv_yt_search_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/yt_search_icon"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/iv_yt_user_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/yt_user_icon"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>

    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/hs_search"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintTop_toBottomOf="@id/ll_title"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="탐색  "
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:background="#F2F2F2"
                android:drawableLeft="@drawable/yt_navi_icon"
                android:drawablePadding="5dp"
                android:paddingStart="5dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"/>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#000000"
                android:alpha="0.1"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="5dp"
                android:text="  전체  "
                android:textColor="@color/white"
                android:background="@drawable/yt_catagory_selected"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="  새로운 맞춤 동영상  "
                android:background="@drawable/yt_catagory"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginStart="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="  믹스  "
                android:background="@drawable/yt_catagory"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginStart="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="  음악  "
                android:background="@drawable/yt_catagory"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginStart="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="  게임  "
                android:background="@drawable/yt_catagory"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginStart="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="  랩  "
                android:background="@drawable/yt_catagory"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginStart="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="  만화영화  "
                android:background="@drawable/yt_catagory"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginStart="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="  요리프로그램  "
                android:background="@drawable/yt_catagory"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginStart="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="  공예  "
                android:background="@drawable/yt_catagory"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginStart="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="  축구  "
                android:background="@drawable/yt_catagory"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginStart="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="  요리  "
                android:background="@drawable/yt_catagory"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginStart="5dp"/>

        </LinearLayout>

    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hs_search"/>

</androidx.constraintlayout.widget.ConstraintLayout>